{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "dependsOn": [  // this creates many parallel terminal windows in the Terminal section. One for each subtask.
                "assemble"
            ],
            "command": "C:\\opt\\msys64\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "maxofthree.obj",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "assemble",
            "type": "shell",
            "args": [
                "-fwin64",
                "maxofthree.asm"
            ],
            "command": "c:/opt/NASM/nasm.exe",
        },
        {
            "label": "link",
            "type": "shell",
            "args": [
                "/SUBSYSTEM:CONSOLE",
                "${fileBasenameNoExtension}.obj"
            ],
            "command": "C:/masm32/bin/link.exe",
            "dependsOn": "assemble"
        },
        {
            "label": "execute",
            "type": "shell",
            "command": "${workspaceFolder}/${fileBasenameNoExtension}.exe",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "link"
        }
    ],
    "version": "2.0.0"
}